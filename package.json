{
  "name": "kitsu-api-docs",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "del": "del apiary.apib",
    "build": "hercule blueprint/kitsu.apib -o apiary.apib -c",
    "lint": "snowboard lint apiary.apib",
    "test": "run-s del build lint",
    "snow": "snowboard http --template osaka --watch apiary.apib",
    "snow-html": "snowboard html --optimized --output docs apiary.apib",
    "start": "yarn test && yarn snow"
  },
  "dependencies": {
    "del-cli": "~3.0.0",
    "hercule": "~4.1.1",
    "npm-run-all": "~4.1.5",
    "snowboard": "4.1.13",
    "snowboard-theme-osaka": "1.0.3"
  }
}
